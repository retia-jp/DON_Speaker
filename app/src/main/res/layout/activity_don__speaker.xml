<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.retia.don_speaker.DON_Speaker">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editText"
                android:layout_below="@+id/EditText"
                android:layout_toStartOf="@+id/textView"
                android:text="読み上げ開始" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:max="200"
                android:progress="100" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seekBar"
                android:text="読み上げ速度"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBar2"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:indeterminate="false"
                android:max="200"
                android:progress="100" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="DON Speaker"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seekBar2"
                android:layout_marginTop="59dp"
                android:text="読み上げる内容"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="26dp"
                android:hint="読み上げるマストドンのURL" />

            <CheckBox
                android:id="@+id/cfgCheckBoxReadNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignStart="@+id/button"
                android:layout_below="@+id/cfgCheckBoxReadID"
                android:layout_toEndOf="@+id/textView3"
                android:checked="true"
                android:text="注意書き"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cfgCheckBoxReadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignStart="@+id/button"
                android:layout_below="@+id/cfgCheckBoxReadTime"
                android:layout_toEndOf="@+id/textView3"
                android:checked="true"
                android:text="アカウント名"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cfgCheckBoxReadToot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignStart="@+id/button"
                android:layout_below="@+id/cfgCheckBoxReadNote"
                android:layout_toEndOf="@+id/textView3"
                android:checked="true"
                android:text="トゥート本文"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/EditText"
                android:layout_marginEnd="22dp"
                android:text="読み上げ停止" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:layout_marginTop="32dp"
                android:text="読み上げ音量"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cfgCheckBoxReadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignStart="@+id/button"
                android:layout_below="@+id/editText"
                android:layout_toEndOf="@+id/textView3"
                android:checked="true"
                android:text="タイムスタンプ"
                android:textSize="15sp" />
        </RelativeLayout>
    </ScrollView>
