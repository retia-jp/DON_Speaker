<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.retia.don_speaker.DON_Speaker">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DON Speaker"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意書き"
        android:id="@+id/cfgCheckBoxReadNote"
        android:checked="true"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/cfgCheckBoxReadID"
        android:layout_toEndOf="@+id/textView3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="トゥート本文"
        android:id="@+id/cfgCheckBoxReadToot"
        android:checked="true"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/cfgCheckBoxReadNote"
        android:layout_toEndOf="@+id/textView3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アカウント名"
        android:id="@+id/cfgCheckBoxReadID"
        android:checked="true"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/cfgCheckBoxReadTime"
        android:layout_toEndOf="@+id/textView3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="タイムスタンプ"
        android:id="@+id/cfgCheckBoxReadTime"
        android:checked="true"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="読み上げる内容"
        android:id="@+id/editText"
        android:layout_below="@+id/seekBar2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textSize="18sp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="読み上げ音量"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="読み上げ速度"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_above="@+id/seekBar2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditText"
        android:layout_marginTop="26dp"
        android:hint="読み上げるマストドンのURL"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="読み上げ開始"
        android:id="@+id/button"
        android:layout_below="@+id/EditText"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginEnd="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="読み上げ停止"
        android:id="@+id/button2"
        android:layout_marginEnd="51dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignEnd="@+id/EditText" />

</RelativeLayout>
